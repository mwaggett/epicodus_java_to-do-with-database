<div class="row">
  <h2 class="well"><center>To Do List</center></h2>
  <h3><a href="/admin">Add categories and tasks</a></h3>

  #if($categories.size() > 0)

    #foreach($category in $categories)
      <div class="well">
        <div class="row">
         <div class="pull-left">
          <h3>$category.getName()</h3>
            <ul style="list-style-type:none">
            #foreach ($task in $category.getTasks())
              <li>
                <form class="inline" action="tasks/$task.getId()/complete" method="post">
                  <input type="image" class="btTxt submit" src="data:image/png;base64,"
                      width="15" height="15">
                </form>
                <a class="inline" href="/tasks/$task.getId()/edit">$task.getDescription()</a>
              </li>
            #end
            </ul>
          </div>

        <div class="pull-right">
          <h3>Completed Tasks</h3>
            <ul style="list-style-type:none">
            #foreach ($task in $category.getCompletedTasks())
              <li>
                <del>$task.getDescription()</del>
              </li>
            #end
            </ul>
        </div>
      </div>

        <div class="row">
          <div class="pull-left">
            <form action="/categories/$category.getId()/update" method="get">
              <button type="submit" class="btn btn-warning">Update</button>
            </form>
          </div>

          <div class="pull-right">
            <form action="/categories/$category.getId()/delete" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>

      </div>
    #end

  #else
    <div class="well">
      <h2>Congratulations! You have nothing to do.</h2>
    </div>
  #end
</div>
